<div class="post-page">
    <section>
        <h2>Create a Post</h2>
        <form class="post-form">
            <label for="post_title">Title</label>
            <input id="post-title" name="post-title" placeholder="Title" />
            <div>
                <textarea name="post-text" placeholder="Post here"></textarea>
            </div>
            <button type="submit">Create Post</button>
        </form>
    </section>
    <hr>
    <section class="post-list">
        <h2>Your Posts</h2>
    </section>
</div>